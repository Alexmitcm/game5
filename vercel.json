{
  "buildCommand": "pnpm build",
  "builds": [
    {
      "config": {
        "distDir": "dist"
      },
      "src": "apps/web/package.json",
      "use": "@vercel/static-build"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "framework": "vite",
  "functions": {
    "apps/api/src/**/*.ts": {
      "runtime": "nodejs18.x"
    }
  },
  "installCommand": "pnpm install",
  "outputDirectory": "apps/web/dist",
  "rewrites": [
    {
      "destination": "/apps/api/src/$1",
      "source": "/api/(.*)"
    }
  ]
}
